<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mediaLoginFragment">

    <fragment
        android:id="@+id/mediaLoginFragment"
        android:name="com.joshgm3z.triplerocktv.ui.login.LoginFragment"
        android:label="MediaLoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_mediaLoginFragment_to_mediaLoadingFragment"
            app:destination="@id/mediaLoadingFragment"
            app:popUpTo="@id/mediaLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mediaLoadingFragment"
        android:name="com.joshgm3z.triplerocktv.ui.loading.MediaLoadingFragment"
        android:label="MediaLoadingFragment"
        tools:layout="@layout/fragment_media_loading">
        <action
            android:id="@+id/action_mediaLoadingFragment_to_mainBrowseFragment"
            app:destination="@id/mainBrowseFragment"
            app:popUpTo="@id/mediaLoadingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainBrowseFragment"
        android:name="com.joshgm3z.triplerocktv.ui.browse.MainBrowseFragment"
        android:label="MainBrowseFragment"
        tools:layout="@layout/fragment_main_browse" />

</navigation>
