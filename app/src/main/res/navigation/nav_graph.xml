<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/detailsFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.joshgm3z.triplerocktv.ui.login.LoginFragment"
        android:label="MediaLoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_mediaLoading"
            app:destination="@id/mediaLoadingFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mediaLoadingFragment"
        android:name="com.joshgm3z.triplerocktv.ui.loading.MediaLoadingFragment"
        android:label="MediaLoadingFragment"
        tools:layout="@layout/fragment_media_loading">
        <action
            android:id="@+id/action_mediaLoading_to_browse"
            app:destination="@id/browseFragment"
            app:popUpTo="@id/browseFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/browseFragment"
        android:name="com.joshgm3z.triplerocktv.ui.browse.category.MainBrowseFragment"
        android:label="BrowseFragment">
        <action
            android:id="@+id/action_browse_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/browseFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_browse_to_mediaLoading"
            app:destination="@id/mediaLoadingFragment" />
        <action
            android:id="@+id/action_browse_to_streamCatalogue"
            app:destination="@id/streamsCatalogue" />
        <action
            android:id="@+id/action_browse_to_search"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.joshgm3z.triplerocktv.ui.search.SearchFragment"
        android:label="SearchFragment" />

    <fragment
        android:id="@+id/streamsCatalogue"
        android:name="com.joshgm3z.triplerocktv.ui.browse.stream.StreamCatalogueFragment"
        android:label="StreamCatalogueFragment">
        <argument
            android:name="categoryId"
            android:defaultValue="122"
            app:argType="integer" />
        <argument
            android:name="categoryName"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="browseType"
            android:defaultValue="VideoOnDemand"
            app:argType="com.joshgm3z.triplerocktv.ui.browse.category.BrowseType" />
        <action
            android:id="@+id/action_streamsCatalogue_to_details"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.joshgm3z.triplerocktv.ui.details.DetailsFragment"
        android:label="DetailsFragment">
        <argument
            android:name="streamId"
            android:defaultValue="20642"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailsFragment_to_playbackFragment"
            app:destination="@id/playbackFragment" />
    </fragment>

    <fragment
        android:id="@+id/playbackFragment"
        android:name="com.joshgm3z.triplerocktv.ui.player.PlaybackFragment"
        android:label="PlaybackFragment">
        <argument
            android:name="streamId"
            app:argType="integer" />
    </fragment>
</navigation>
